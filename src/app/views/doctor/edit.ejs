<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Doctor</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

  <!-- Header Section -->
  <header class="text-center py-5 bg-primary text-white">
    <h1>Edit Doctor Information</h1>
  </header>

  <!-- Main Content Section -->
  <div class="container mt-5">

    <!-- Form Edit Doctor -->
    <form action="/doctors/update/<%= doctor.id %>" method="POST">
      <div class="row mb-3">
        <label for="name" class="col-sm-2 col-form-label">Doctor Name</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="name" name="name" value="<%= doctor.name %>" required>
        </div>
      </div>

      <div class="row mb-3">
        <label for="specialty" class="col-sm-2 col-form-label">Specialty</label>
        <div class="col-sm-10">
          <select id="specialty" name="specialty" class="form-select" required>
            <option value="Mata" <% if(doctor.specialty === 'Mata') { %>selected<% } %>>Mata</option>
            <option value="Kulit dan Kelamin" <% if(doctor.specialty === 'Kulit dan Kelamin') { %>selected<% } %>>Kulit dan Kelamin</option>
            <option value="Telinga" <% if(doctor.specialty === 'Telinga') { %>selected<% } %>>Telinga</option>
            <option value="Organ Dalam" <% if(doctor.specialty === 'Organ Dalam') { %>selected<% } %>>Organ Dalam</option>
            <option value="Cantengan" <% if(doctor.specialty === 'Cantengan') { %>selected<% } %>>Cantengan</option>
            <option value="Kandungan" <% if(doctor.specialty === 'Kandungan') { %>selected<% } %>>Kandungan</option>
          </select>
        </div>
      </div>

      <div class="row mb-3">
        <label for="experience" class="col-sm-2 col-form-label">Experience (Years)</label>
        <div class="col-sm-10">
          <input type="number" class="form-control" id="experience" name="experience" value="<%= doctor.experience %>" required>
        </div>
      </div>

      <div class="d-flex justify-content-between mt-4">
        <button type="submit" class="btn btn-warning btn-lg">Update Doctor</button>
        <a href="/doctors" class="btn btn-secondary btn-lg">Back to Doctors List</a>
      </div>
    </form>
  </div>

  <!-- Bootstrap JS & Popper -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

</body>
</html>
