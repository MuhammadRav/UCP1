<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Doctor</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

  <!-- Header Section -->
  <header class="text-center py-5 bg-primary text-white">
    <h1>Add a New Doctor</h1>
  </header>

  <!-- Main Content Section -->
  <div class="container mt-5">

    <!-- Form Add Doctor -->
    <form action="/doctors/create" method="POST">
      <div class="row mb-3">
        <label for="name" class="col-sm-2 col-form-label">Doctor Name</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="name" name="name" required>
        </div>
      </div>

      <div class="row mb-3">
        <label for="specialty" class="col-sm-2 col-form-label">Specialty</label>
        <div class="col-sm-10">
          <select id="specialty" name="specialty" class="form-select" required>
            <option value="Mata">Mata</option>
            <option value="Kulit dan Kelamin">Kulit dan Kelamin</option>
            <option value="Telinga">Telinga</option>
            <option value="Organ Dalam">Organ Dalam</option>
            <option value="Cantengan">Cantengan</option>
            <option value="Kandungan">Kandungan</option>
          </select>
        </div>
      </div>

      <div class="row mb-3">
        <label for="experience" class="col-sm-2 col-form-label">Experience (Years)</label>
        <div class="col-sm-10">
          <input type="number" class="form-control" id="experience" name="experience" required>
        </div>
      </div>

      <div class="d-flex justify-content-between mt-4">
        <button type="submit" class="btn btn-success btn-lg">Add Doctor</button>
        <a href="/doctors" class="btn btn-secondary btn-lg">Back to Doctors List</a>
      </div>
    </form>
  </div>

  <!-- Bootstrap JS & Popper -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

</body>
</html>
